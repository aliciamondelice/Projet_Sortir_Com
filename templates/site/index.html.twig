{% extends 'base.html.twig' %}

{% block title %}Liste des sites{% endblock %}
{% block meta_title %}Liste des sites{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Option</th>
        </tr>
        </thead>
        <tbody>
        {% for site in siteRep %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.name }}</td>
                <td><a class="button ml-5 p-2 has-background-danger has-text-white" href="deleteSite/{{ site.id }}">Supprimer</a> </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="button background-blue has-text-white mt-5" href="{{ path('new_site') }}">Ajouter un site</a>
{% endblock %}