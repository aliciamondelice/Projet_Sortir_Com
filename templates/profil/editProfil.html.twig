{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href=" {{ asset('css/update_profil.css') }}">
{% endblock %}
{% block title %}
    Modifier profil
{% endblock %}
{% block body %}
    {% if user.getPictureLink() is null %}
        <figure class="image avatar">
            <img class="is-rounded" src="{{ asset('images/img_user.png') }}" alt="photo_user_par_default">
        </figure>
    {% endif %}

    {{ form_start(form) }}

    {# <div class="block">
        {{ form_row(formAvatar.avatar) }}

    </div> #}
    <div class="block">
        {{ form_row(form.pictureFile) }}
    </div>
    <div class="block">
        {{ form_row(form.username) }}
    </div>
    <div class="block">
        {{ form_row(form.name) }}
    </div>
    <div class="block">
        {{ form_row(form.surname) }}
    </div>
    <div class="block">
        {{ form_row(form.phone) }}
    </div>
    <div class="block">
        {{ form_row(form.email) }}
    </div>
    <div class="block">
        {{ form_row(form.password.first) }}
    </div>
    <div class="block">
        {{ form_row(form.password.second) }}
    </div>

    <button type="submit" class="button is-fullwidth is-primary mb-3" id="button_submit">Enregistrer</button>
    <a class="button is-fullwidth is-danger" href="{{ path('home') }}">Annuler</a>
    {{ form(form) }}

{% endblock %}



