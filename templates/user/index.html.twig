{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block meta_title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.name }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_register') }}">Ajouter un utilisateur</a>
{% endblock %}