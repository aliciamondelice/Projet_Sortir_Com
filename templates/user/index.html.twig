{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block meta_title %}Liste des utilisateurs{% endblock %}

{% block body %}
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Site</th>
                <th>Detail</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.site.name }}</td>
                    <td><a class="button ml-5 p-2 has-background-link has-text-white" href="{{ path('profil', {id: user.id}) }}">Afficher les details</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <div class="has-text-centered">
        <a class="button ml-5 p-2 background-blue has-text-white" href="{{ path('app_register') }}">Ajouter un utilisateur</a>
    </div>


{% endblock %}